@inherits XComponentBase
@code {
    [Parameter] public int Num { get; set; }
    private string datasetId = "123";
}

<a href="@Link.GetPathByName("Dataset.View", new { id = datasetId} )">
<div class="bg-white p-4 shadow-md">
    <h3 class="text-lg font-medium mb-2">Dataset #@Num</h3>
    <p class="text-sm text-gray-600">This is Dataset #@Num. More to come soon!</p>
</div>
</a>