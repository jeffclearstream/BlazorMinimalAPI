@inherits XComponentBase
@using BlazorMinimalApis.Data
@using BlazorMinimalApis.Endpoints.Pages
@using BlazorMinimalApis.Pages.Identity

@code {
    [Parameter]
    public InputModel RegisterModel { get; set; } = new();

}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
        <h2 class="text-2xl font-bold mb-8 text-center">Create an account</h2>
        <form method="post" @action="@Link.GetPathByName("RegisterUser")">
            <div class="mb-4">
                <label for="email-register" class="block text-sm font-medium text-gray-700">Email address</label>
                <input type="email" id="email-register" @bind="RegisterModel.Email" placeholder="Email address" class="input input-bordered w-full mt-1">
            </div>
            <div class="mb-4">
                <label for="password-register" class="block text-sm font-medium text-gray-700">Password</label>
                <input type="password" id="password-register" @bind="RegisterModel.Password" placeholder="Password" class="input input-bordered w-full mt-1">
            </div>
            <div class="mb-4">
                <label for="confirm-password" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <input type="password" id="confirm-password" @bind="RegisterModel.ConfirmPassword" placeholder="Confirm Password" class="input input-bordered w-full mt-1">
            </div>
            <button type="submit" class="btn btn-primary w-full mb-4">Register</button>
            <AntiforgeryToken/>
            <div class="text-center">
                <span class="text-sm">Already have an account? </span>
                <a href="/login" class="text-indigo-600 hover:underline text-sm">Sign In</a>
            </div>
        </form>
    </div>
</div>